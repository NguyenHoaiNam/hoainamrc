# Some more ls
alias la='ls -A'
alias l='ls -CF'

alias cdg='cd ~/MyGit'
alias psg='ps aux | grep '
alias md='mkdir'
alias rmd='rm -rf'
alias cdp='cd ~/Code-python'
alias cdv='cd ~/Code-python/virtual'
alias cdc='cd ~/MyGit/hoainamrc/file_config'

# Alias for virtual enviroment
alias en2='source /Users/NamHoai/Code-python/virtual/env_py2/bin/activate'

# Alias for Git
alias gst='git status'
alias grw='git review'

function gcn() {
    cd ~/MyGit
    if [ -z $3 ]; then
        git clone https://github.com/$1/$2.git
    else
        git clone https://github.com/$1/$2.git -b stable/$3
    fi
}

# Some more color
alias grep='grep --color=auto'
alias filetree="ls -R | grep ":$" | sed -e 's/:$//' -e 's/[^-][^\/]*\//--/g' -e 's/^/ /' -e 's/-/|/'"

# Setting for Visual Studio
if [ -f "/Applications/Visual Studio Code.app/Contents/Resources/app/bin/code" ]
then
export PATH="$PATH:/Applications/Visual Studio Code.app/Contents/Resources/app/bin"
fi

# Setting for Sublime
if [ -f "/Applications/Sublime Text.app/Contents/SharedSupport/bin/subl" ] 
then
export PATH="$PATH:/Applications/Sublime Text.app/Contents/SharedSupport/bin"
fi

